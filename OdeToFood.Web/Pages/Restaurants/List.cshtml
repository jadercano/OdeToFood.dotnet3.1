@page
@model OdeToFood.Web.Pages.Restaurants.ListModel
@{
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input name="searchTerm" type="search" class="form-control" asp-for="SearchTerm" />
            <span class="input-group-append">
                <button class="btn btn-primary">
                    <i class="fas fa-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
    <tr>
        <td>@restaurant.Name</td>
        <td>@restaurant.Location</td>
        <td>@restaurant.CuisineType</td>
        <td>
            <a class="btn btn-lg" asp-page="./Detail" asp-route-restaurantId="@restaurant.Id">
                <i class="fas fa-search-plus"></i>
            </a>
        </td>
    </tr>
    }
</table>